{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "types": ["vite/client"],

      "jsx": "react-jsx", // Necessary for JSX in .tsx files
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true // Optional, allows JS files
    },
    "include": ["src/**/*"]
  }
